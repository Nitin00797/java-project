pipeline {
    agent {
        node {
            label 'Master && CentOS'
        }
    }

    stages {
        agent {
            dockerfile {
                filename 'Dockerfile.build'
                dir 'src'
                label 'Linux CentOS'
                additionalBuildArgs '--build-arg version=1.0.2'
                }
            }
        stages {
            stage("Run cmd") {
                steps {
                    echo "Hello, Dockerfile"
                }
            }
        }

    }
}

