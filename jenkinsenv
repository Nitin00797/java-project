pipeline {
    agent {
        node {
            label 'Master && CentOS'
        }
    }

    stages {
        agent {
            node {
                label 'Linux CentOS'
            }
        }
        stage ("Dockerfile"){
            steps {
            dockerfile {
                filename 'Dockerfile.build'
                dir 'src'
                additionalBuildArgs '--build-arg version=1.0.2'
                }
              }
            }
            stage("Run cmd") {
                steps {
                    echo "Hello, Dockerfile"
                }
            }
    }
}

