pipeline {
    agent any

    stages {
      stage("Dear Please Run") {
        agent {
            dockerfile {
            filename 'Dockerfile.build'
            dir 'src'
            additionalBuildArgs '--build-arg version=1.0.2'
            }
        }
        steps {
            echo "Please run bro"
        }
        }

        stage("Run cmd") {
            steps {
                    echo "Hello, Dockerfile"
                    sh 'python hello.py'
                }
            }
    }
}

