pipeline {
    agent any
    stages {
        stage("Foo") {
            steps {
                echo "First Stage"
            }
        }
        stage("Evaluate Master") {
            when {
                branch "master"
            }
            steps {
                echo "This is a master branch"
            }
        }
        stage("Evaluate Slave") {
            when {
                branch "development"
           }
           steps {
               echo "This is a development branch"
           }
        }
    }
}
